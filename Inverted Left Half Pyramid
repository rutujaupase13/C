#include <stdio.h>

int main() {
    int rows;
    printf("Enter the value of rows:");
    scanf("%d",&rows);
    for(int i=rows;i>0;i--){
        for(int j= 2*(rows-i);j>0;j--){
            printf(" ");
        }
        
        for(int k=i;k>0;k--){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
