#include <stdio.h>
 int convert(int decNo){
     static long binNo, r , factor = 1;
     if( decNo != 0){
         r = decNo%2;
         binNo = binNo + r * factor;
         factor = factor * 10;
         convert(decNo / 2);
     }
     return binNo ;
 }
 int main(){
     int decNo;
     long binNo;
     printf("Enter the decimal number: ");
     scanf("%d",&decNo);
     binNo = convert(decNo);
     printf("Binary Number is %ln",binNo);
     return 0;
 }
