// calculate percentage of five subjects
#include<stdio.h>

int main()
{
    int sub1,sub2,sub3,sub4,sub5;
    float  sum,avg,per;
    printf("Enter marks :");
    scanf("%d %d %d %d %d",&sub1,&sub2,&sub3,&sub4,&sub5);
    sum=sub1+sub2+sub3+sub4+sub5;
    printf("sum: %.2f\n",sum);
    avg= sum/5;
    printf("Average:%.2f\n",avg);
    per=(sum/500)*100;
    printf("Percentage : %.2f\n",per);
    return 0;
}
