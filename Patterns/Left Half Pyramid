#include <stdio.h>

int main() {
    int rows;
    printf("Enter the value of rows:");
    scanf("%d",&rows);
    // row
    for(int i=0;i<rows;i++){
        // space
        for(int j=0;j< 2*(rows-i);j++){
            printf(" ");
        }
        //column
        for(int k=0;k<=i;k++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
