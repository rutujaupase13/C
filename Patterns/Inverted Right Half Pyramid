#include <stdio.h>

int main() {
    // Write C code here
    int num;
    printf("Enter the value");
    scanf("%d",&num);
    for(int row = 1; row <= num ;row++){
        for(int col = 1; col <= num - row +1 ; col++){
            printf("*\t");
        }
        printf("\n");
    }

    return 0;
}
